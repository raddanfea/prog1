#include <stdio.h>
#include <curses.h>
#include <unistd.h>
#include <iostream>
using namespace std;

int
main ( void )
{
    WINDOW *ablak;
    ablak = initscr ();

    int x = 0;
    int y = 0;

    int xmo = 1;
    int ymo = 1;

    int amx;
    int amy;
    float draw;

    for ( ;; ) {

        getmaxyx ( ablak, amy , amx );
        amy = amy * 0.5;
        amx = amx * 0.5;
        
        for(int a = 0;a<amx;a++){mvprintw ( amy, a, "=" );}
        for(int b = 0;b<amy;b++){mvprintw ( b, amx, "|" );}
        mvprintw ( amy, amx, "/" );
        
        mvprintw ( y, x, "O" );
        refresh ();
        usleep (100000);
	      clear();

        x = x + xmo;
        y = y + ymo;

        if ( x>=amx-1 ) {xmo = xmo * -1;}
	      if ( x<=0 ) {xmo = xmo * -1;}
        if ( y<=0 ) {ymo = ymo * -1;}
        if ( y>=amy-1 ) {ymo = ymo * -1;}
    }
    return 0;
}
