#include <iostream> 
#include <cstdio> 
#include <string>
using namespace std; 
  
string encrypt(string text) 
{ 
    string result = ""; 
  
    for (int i=0;i<text.length();i++) 
    { 
	char c = text[i];
	switch(c){
		case 'e':
			result += "3";break;
			
		case 'a':
			result += "4";break;
			
		case 't':
			result += "7";break;
			
		case 'h':
			result += "6";break;
			
		case 'o':
			result += "0";break;
			
		default:
			result += c;break;
			}
    } 
  
    return result; 
} 
string text;

int main() 
{ 
	
    cin >> text;  
    int s = 4; 
    cout << "Eredeti : " << text; 
    cout << "\nL33t: " << encrypt(text)<<"\n"; 
    return 0; 
} 
